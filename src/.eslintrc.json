{
  "extends": "airbnb-base",
  "plugins": [
    "import"
  ],
  "globals": {
    "angular": true,
    "app": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "func-names": "off",
    "global-require": "off",
    "new-cap": ["error", { "newIsCapExceptions": ["mnemonic"]}],
    "no-loop-func": "off",
    "no-plusplus": "off",
    "no-restricted-properties": "off",
    "no-return-assign": "off",
    "no-underscore-dangle": "off",
    "no-param-reassign": "off"
  }
}
